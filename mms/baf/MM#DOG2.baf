//拿走后摧毁，保证只剩一个
IF
	HasItem("MM#DOG2",Myself)
THEN
	RESPONSE #100
		DestroyItem("MM#DOG2")
		Continue()
END
//拿走后产生一个坏的用来丢地上
IF
	Global("moveitem","LOCALS",1)
THEN
	RESPONSE #100
		CreateItem("MM#DOG2A",0,0,0)
		SetGlobal("moveitem","LOCALS",2)
		Continue()
END
//死了丢地上
IF
	Die()
THEN
	RESPONSE #100
		DropItem("MM#DOG2A",[-1.-1])
		DestroySelf()
END
//关机回收
IF
	OR(2)
		GlobalTimerExpired("Existime","LOCALS")
		Global("SHUTDOWN","LOCALS",1)
	Range([PC],4)
THEN
	RESPONSE #100
		GiveItemCreate("MM#DOG2",[PC],0,0,0)
		DestroySelf()
END
//关机先返回
IF
	OR(2)
		GlobalTimerExpired("Existime","LOCALS")
		Global("SHUTDOWN","LOCALS",1)
	!Range([PC],4)
THEN
	RESPONSE #100
		DisplayStringHead(Myself,@150)	//返回中……
		MoveToObject([PC])
END

//如果中途出问题
IF
	!Allegiance(Myself,CONTROLLED)
THEN
	RESPONSE #100
		ChangeEnemyAlly(Myself,CONTROLLED)
		Continue()
END

//被动模式
IF
	HotKey(D)
THEN
	RESPONSE #100
		ReallyForceSpellRES("MM#UAV1U",Myself)
END
//主动模式
IF
	HotKey(F)
THEN
	RESPONSE #100
		ReallyForceSpellRES("MM#UAV1V",Myself)
END

//和队友太近的话
IF
	OR(3)
		Range([PC],1)
		Range([GOODCUTOFF.0.0.0.0.SUMMONED],1)
		Range([GOODCUTOFF.0.0.0.0.BOTH],1)
THEN
	RESPONSE #100
		JumpToObject(Nearest())
		Continue()
END

//找朋友
IF
	Killed([ENEMY])
	RandomNum(10,10)
THEN
	RESPONSE #100
		PlaySoundThroughVoice("MM#DOG1")
		Continue()
END

//在最近七个敌人中找不免疫主手武器的打
IF
	ActionListEmpty()
	Global("ACTVMODE","LOCALS",1)
	See(NearestEnemyOf())
	WeaponEffectiveVs(NearestEnemyOf(),MAINHAND)
THEN
  RESPONSE #100
		AttackReevaluate(NearestEnemyOf(),30)
END

