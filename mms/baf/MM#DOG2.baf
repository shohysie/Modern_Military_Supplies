IF
	OnCreation()
THEN
	RESPONSE #100
		SetGlobalTimer("ExistTime","LOCALS",600)
		SetGlobal("ACTVMODE","LOCALS",1)
		DisplayStringHead(Myself,@142)	//开启攻击模式
		Continue()
END
//拿走召唤者身上留存的召唤媒介物
IF
	!GlobalGT("moveitem","LOCALS",0)
	Exists(LastSummonerOf())
	OR(3)
		CheckItemSlot(LastSummonerOf(),"MM#DOG2",SLOT_MISC0)
		CheckItemSlot(LastSummonerOf(),"MM#DOG2",SLOT_MISC1)
		CheckItemSlot(LastSummonerOf(),"MM#DOG2",SLOT_MISC2)
THEN
	RESPONSE #100
		SetGlobal("moveitem","LOCALS",1)
		ClearActions(LastSummonerOf())
		ActionOverride(LastSummonerOf(),GiveItem("MM#DOG2",[CONTROLLED.WEAPON.GOLEM.DOG_WILD.NO_MAGIC.BOTH.NEUTRAL]))
END
